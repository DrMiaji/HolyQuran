<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SplashActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="end">

        <com.efortshub.holyquran.views.HbImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            app:tint="?attr/colorPrimaryVariant"
            android:src="@drawable/ic_baseline_save_alt_24"/>


        <com.efortshub.holyquran.views.HbImageButton
            android:id="@+id/btn_go_to"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:layout_margin="4dp"
            app:tint="?attr/colorPrimaryVariant"
            android:src="@drawable/ic_baseline_settings_24"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_hello_world"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.efortshub.holyquran.views.HbButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/txt_click_me"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_hi_switch"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_menu_book_24"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="HI, this is hint"/>

</androidx.appcompat.widget.LinearLayoutCompat>